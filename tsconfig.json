{
  "src": ["./src/**/*.ts"],
  "compilerOptions": {
    "module": "amd",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "noImplicitThis": false,
    "noLib": false,
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "target": "es5",
    "types": [
      "@edsilv/exjs",
      "@edsilv/http-status-codes",
      "@edsilv/jquery-plugins",
      "@edsilv/key-codes",
      "@edsilv/utils",
      "@iiif/base-component",
      "@iiif/manifold",
      "@iiif/vocabulary",
      "jest",
      "jquery",
      "modernizr",
      "manifesto.js",
//      "requirejs",
      "three",
      "virtex3d"
    ]
  },

  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
